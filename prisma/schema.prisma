generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Admin {
  id       String @id @default(uuid())
  email    String @unique
  password String
}

model Reservation {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String?
  startDate DateTime
  endDate   DateTime
  message   String?
  status    String   @default("en attente") // Statut par d√©faut
  createdAt DateTime @default(now())
}